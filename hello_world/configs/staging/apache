<VirtualHost *:80>
    ServerName hello_world.beta.tribapps.com
    ServerAlias www.hello_world.beta.tribapps.com

    WSGIScriptAlias / /home/newsapps/sites/hello_world/repository/hello_world/configs/staging/staging.wsgi
    
    Redirect permanent /favicon.ico http://media-beta.tribapps.com/hello_world/na_media/favicon.ico
    
    Alias /robots.txt /home/newsapps/sites/hello_world/repository/hello_world/assets/robots.txt
    Alias /na_media/ /home/newsapps/sites/hello_world/env/src/newsapps/newsapps/na_media/
 
    ErrorLog /home/newsapps/logs/hello_world.error.log
    LogLevel warn

    CustomLog /home/newsapps/logs/hello_world.access.log combined
    
    ServerSignature Off
    
    RewriteEngine on
    # canonical hostname
    RewriteCond %{HTTP_HOST} ^www [NC] 
    RewriteRule ^/(.*)  http://hello_world.beta.tribapps.com/$1 [L,R]
    
    RewriteCond %{REQUEST_URI} /maintenance.html$ 
    RewriteRule $ / [R=302,L]
</VirtualHost>